<Alloy>

	<View class="aspectCashflowContainer">

		<Label class="separator"/>
		<Label id="cashFlowIcon" class="aspectIcon"/>
		<TableView id="aspectTable" dataCollection="aspettiCashflow"  dataFunction="syncAspects" dataTransform="transformData">

			<TableViewRow class="row" onClick="showDetail">
				<View class="dataWrapper">
					<Label class="dataDisplay first" id="importo" text="{temp_importo}"/>
					<Label class="dataDisplay" id="tipoMovimento" text="{temp_tipoMovimento}"/>
					<Label class="dataDisplay" id="pagamentoIncasso" text="{temp_pagamentoIncasso}"/>
				</View>
			</TableViewRow>

		</TableView>

	</View>

</Alloy>
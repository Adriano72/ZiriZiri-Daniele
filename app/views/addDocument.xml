<Alloy>
	<Window id="window" class="container" title = "Nuovo Documento">
		<Menu id="menu" platform="android">
			
			<MenuItem id="salva" title="Scrivi" icon="/images/785-floppy-disk.png"  onClick="createProtoObj" showAsAction="Ti.Android.SHOW_AS_ACTION_IF_ROOM" />
			
		</Menu>

		<TableView id="newDocumentTable">
			
			<TableViewRow class="row">
				<TextField id="titolo"/>				
			</TableViewRow>
			
			<TableViewRow class="row">
				<TextField id="descrizione"/>
			</TableViewRow>
			
			<TableViewRow class="row">
				<Button id="foto" title= 'Scatta foto' onClick="openCamera" />
			</TableViewRow>
			<TableViewRow class="row">
				<Button id="gallery" title= "Scegli foto esistente" onClick="openGallery"/>
			</TableViewRow>
			<TableViewRow class="row">
				<ImageView id="preview" />
			</TableViewRow>

		</TableView>

	</Window>
</Alloy>
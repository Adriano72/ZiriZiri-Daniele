<Alloy>
	<Window id="win" class="container" windowSoftInputMode="Ti.UI.Android.SOFT_INPUT_ADJUST_PAN" title = "Nuovo Link">

		<Menu id="menu" platform="android" onHomeIconItemSelected="homeIconSelected">
			<MenuItem id="mn_salva" onClick="saveLink"/>
		</Menu>
		<TableView id="newLinkTable">

			<TableViewRow class="row">
				<View class="rowWrapper">
					<TextField id="titolo"/>
				</View>
			</TableViewRow>
			<TableViewRow class="row">
				<View class="rowWrapper">
					<TextField id="link"/>
				</View>
			</TableViewRow>

		</TableView>

	</Window>
</Alloy>
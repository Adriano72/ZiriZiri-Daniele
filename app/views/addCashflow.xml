<Alloy>
	<Window id="window" class="container" title = "Nuovo CashFlow">
		
		<Menu id="menu" platform="android">

			<MenuItem id="mn_salva" onClick="savePost"/>

		</Menu>

		<TableView id="newCashflowTable">
			
			<TableViewRow>
				<View id="importoWrapper">
						<Label id="importoText"/>
						<Label id="importoValue"/>
						<Label id="verticalBar"/>
						<ImageView id="valutaImg"/>
					</View>
			</TableViewRow>
			
			<TableViewRow class="row">
				<Picker id="pkrTipoMovimento" selectionIndicator="true"/>
			</TableViewRow>
			
			<TableViewRow class="row">
				<TextField id="importo"/>				
			</TableViewRow>
			
			<TableViewRow class="row">
				<Picker id="pkrPagamentoIncasso" selectionIndicator="true"/>
			</TableViewRow>

		</TableView>

	</Window>
</Alloy>
<Alloy>
	<Window class="container" layout="vertical" onOpen="hideActionBar">
		<ImageView id="bigLogo"/>
		<TextField id="username"/>
		<View class="subContainer">
			<TextField id="password"/>
			<Label id="btn_login" onClick="do_login" />
		</View>
		<View class="bottomContainer">
			<Switch value="false" id="remember" onChange="manageRememberMe"/>
			<Label id="forgotPassword"/>
		</View>
	</Window>
</Alloy>
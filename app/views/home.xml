<Alloy>
	<Window class="container" id="shortcutsWin" onAndroid:back="manageClose">
		
		<View id="quickPhoto" class="shortcut" onClick="createNewPostWithPhoto">
			
			<ImageView id="cameraIcon" class="shortcutIcon"/>
		</View>
		<View id = "quickPost" class ="shortcut" onClick="createNewPost">
			
			<ImageView id="postIcon" class="shortcutIcon"/>
		</View>
		<TableView class="mainTable">
			<TableViewRow id="timelineRow" class="mainTableRow" onClick="goTimeline"/>
			<TableViewRow id="picturesRow" class="mainTableRow"/>
			<TableViewRow id="settingsRow" class="mainTableRow"/>
		</TableView>
	</Window>
</Alloy>